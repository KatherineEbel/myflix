%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_with url: password_path(reset_token: @user.reset_password_token), method: :patch do |f|
        %header
          %h1 Reset Your Password
        = f.password_field :password
        = f.submit 'Reset Password', wrapper: { class: 'action' }
