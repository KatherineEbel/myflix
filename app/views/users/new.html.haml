%section.register.container.mt-3
  = bootstrap_form_for @user, layout: :horizontal, control_col: 'col-lg-6' do |f|
    %header
      %h1 Register
    %fieldset
      = hidden_field_tag :referral_id, params[:referral_id]
      = f.email_field :email
      = f.password_field :password
      = f.text_field :full_name
    %fieldset.actions
      = f.primary 'Sign Up'
